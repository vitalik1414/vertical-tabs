@import "vars.styl"

#tabs_wrap_topsites
	width calc(100% - 2px)
	max-height 470px
	overflow-x hidden
	overflow-y scroll
	padding-left: 2px
	a
		display block
		text-decoration none
		color $color4
		padding 4px 0 4px 30px
		font-size 13px
		transition all 0.2s
		background-repeat no-repeat
		background-position 5px 5px
		border-bottom 1px solid $color5
		background-size 16px

		&:nth-child(odd)
			background-color $color6
			transition all 0.2s

		&:hover
			transition all 0.2s
			background-color rgba(243, 136, 72, 0.1)