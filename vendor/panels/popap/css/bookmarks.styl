@import "vars.styl"

#tabs_wrap_bookmarks {
	width: 100%;
	display: flex;
	justify-content: flex-start;
	flex-direction: row;
	flex-wrap: wrap;
}

.wrap-search {
	position: relative;
	height: 30px;
}

.search {
	margin: 5px 5px 0;
	padding: 5px;
	border: 1px solid $color1;
	width: calc(100% - 22px);
	position: absolute;
	z-index: 1;
	top: 0;
	border-radius: 3px;
	overflow: hidden;
	font-size: 14px;
}
.t_bookmarks .search {
	border: 1px solid $color9;
}
.addTags
	position absolute
	z-index 2
	width 30px
	height 27px
	text-align center
	right 5px
	top 5px
	line-height 1.4
	background $color1
	font-size 18px
	font-weight bold
	color $color_white
	cursor pointer
	user-select none
	border-radius 0 3px 3px 0
	&:active
		opacity 0.7

.t_bookmarks #addTags_b {
	background: $color9;
}

.search-block {
	width: 100%;
}

.remove-text-search {
	position: absolute;
	color: $red;
	font-size: 16px;
	top: 6px;
	right: 40px;
	z-index: 10;
	cursor: pointer;
	font-family: cursive;
	font-size: 16px;
	width: 25px;
	text-align: center;
	user-select: none;
}

.tags
	margin: 5px 0;
	width: 400px;
	display: flex;
	justify-content: flex-start;
	flex-direction: row;
	flex-wrap: wrap;
	overflow: hidden;
	max-height: 87px;
	overflow-x: hidden;
	overflow-y: auto;
	width: 100%;
	padding: 0 4px;
	.tag
		display inline-block
		background $color7
		border-radius 4px
		margin 3px 2px
		box-shadow 1px 1px 2px $color11
		border-width 2px
		border-style solid
		color #000
		user-select none
		&:active
			opacity 0.7
		.tag-del
			color $red
			width 14px
			padding 0 0px 2px 0px
			display inline-block
			text-align center
			vertical-align top
			cursor pointer

		.tagName
			padding 2px 7px 6px 0px
			line-height 0.8
			display inline-block
			vertical-align middle
			max-width 150px
			overflow hidden
			text-overflow ellipsis
			white-space nowrap
			cursor pointer

.results {
	max-height: 380px;
	overflow-x: hidden;
	overflow-y: auto;
	width: calc(100% - 2px);
	border-bottom: 1px solid $color8;
	box-shadow: 0px -1px 4px $color9;
	padding-left: 2px;
	margin-top: 2px;
}

#results_b.results>li {
	border-bottom: 1px solid #DDD;
	position: relative;
}

#results_b.results>li:nth-child(odd) {
	background-color: $color6;
}

#results_b.results>li>a {
	display: inline-block;
	color: $color10;
	font-size: 13px;
	text-decoration: none;
	padding: 4px 0 4px 30px;
	background-size: 16px;
	background-repeat: no-repeat;
	background-position: 5px 5px;
	width: calc(100% - 90px);
}

#results_b.results>li .info {
	display: inline-block;
	font-size: 12px;
	color: $color9;
	border-radius: 3px;
	width: 32px;
	text-align: center;
	cursor: pointer;
}

#results_b.results>li .info:hover .popap {
	display: flex;
}

#results_b.results>li .popap {
	width: 128px;
	position: absolute;
	display: flex;
	justify-content: space-between;
	align-items: center;
	bottom: 0px;
	right: 0;
	z-index: 10;
	background: $color9;
	padding: 3px;
	border-radius: 3px;
	display: none;
	height: 16px;
	cursor: default;
}

#results_b.results .deleteBookmarks
	width 15px
	height 15px
	line-height 1
	text-align center
	color $color10
	border-radius 50%
	box-shadow 0 0 0px #F33
	display inline-block
	vertical-align top
	font-size 13px
	font-weight bold
	cursor pointer
	transition all 0.1s
	font-family Arial
	margin-top 5px
	margin-left 2px
	&:hover
		box-shadow 0 0 5px $red
		+a
			color $red

#results_b.results>li .popap .data {
	color: $color_white;
	cursor: default;
	font-family: -webkit-body;
}

.openAll
	width 100%

#openBookmarks
	display block
	background $color9
	border 2px solid $color_white
	box-shadow 0 0 1px $color10
	border-radius 10px
	color $color_white
	padding 5px 10px
	cursor pointer
	float right
	user-select none
	&:hover
		box-shadow: inset 0 0 1px $color_white

#findBookmarks
	color $color_white