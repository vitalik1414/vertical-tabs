@import "vars.styl"


/* hovers */
.t_tabs .tabs-items 
	li:hover
		background-color rgba(72, 136, 243, 0.1)
		transition all 0.1s
	li.active
		background-color rgba(72, 136, 243, 0.3)


.t_bookmarks .results > li:hover
	background-color: rgba(75, 192, 177, 0.1);
	transition: all 0.2s;

.tabs-items
	float left
	max-height 387px
	overflow-x hidden
	overflow-y scroll
	width 100%
	box-shadow 0px -1px 4px $color1
	border-bottom 1px solid $color8
	margin-top 2px
	.btn
		width: 20px;
		height: 20px;
		padding-top: 5px;
		text-align: center;
		display: inline-block;
		vertical-align: top;
		float: left
		.del
			width: 16px;
			height: 15px;
			line-height: 1;
			text-align: center;
			color: $color10;
			border-radius: 50%;
			box-shadow: 0 0 0px #F33;
			display: inline-block;
			vertical-align: top;
			font-size: 13px;
			font-weight: bold;
			cursor: pointer;
			transition: all 0.1s;
			font-family: Arial
			&:hover
				box-shadow: 0 0 5px $red

		&:hover+.tab span
			color $red
			transition all 0.2s

	.tab
		display inline-block
		padding 3px 7px
		width calc(100% - 74px)
		cursor pointer
		span
			font-size 13px
			border-radius 5px
			line-height 1
			vertical-align middle
			color $color10
			transition all 0.2s
		img
			display inline-block
			transition all 0.2s
			vertical-align middle
			margin-right 5px
			width 16px
		.info
			padding-top 5px
			width 35px
			height 20px
			vertical-align top
			display inline-block
			.audio
				background url(../img/audio.png) no-repeat
				width 10px
				height 20px
				background-size contain
				background-position 0 2px
				float left
	>li
		box-shadow 2px 1px 3px #D3D3D3
		display block
		border-radius 4px
		padding 2px 0
		border-bottom 1px solid $color8
		.tab.short
			overflow hidden
			text-overflow ellipsis
			white-space nowrap


.options
	clear both
	padding 3px 8px 3px 8px
	display flex
	justify-content flex-start
	align-content center
	align-items center
	width calc(100% - 16px)
	background $color7
	border-top 1px solid $color_white
	.activity
		display inline-block
		width 100%
		#deleteCopy
			display none
			background $color1
			border 2px solid $color_white
			box-shadow 0 0 1px $color10
			border-radius 10px
			color $color_white
			padding 5px 10px
			cursor pointer
			float right
			user-select none
			&:hover
				box-shadow inset 0 0 1px $color_white
		button
			cursor pointer

	#openTabs
		font-weight bold
		font-size 12px
		color $color1
		padding 10px 5px 5px 5px
		vertical-align middle
	.settings
		float left
		margin 3px 6px 3px 0
		display inline-block
		display flex
		position relative
		cursor pointer
		.settings-btn
			line-height 1.4
			font-size 14px
			padding 2px 5px
			border-radius 5px
			position relative
			z-index 3
			border 1px solid $color1
			color $color1
			margin-left 1px
		.settings-options
			top -71px
			background $color1
			display none
			position absolute
			width 225px
			height 50px
			padding 10px
			border-radius 5px 5px 5px 0
			border 1px solid #DDD
			z-index 2
			>div
				float left
				width 100%
				padding 3px 0
				label
					line-height 1
					font-size 13px
					color $color_white
					user-select none

				input
					line-height 1
					margin 3px 5px 3px 4px
					float left

				input[type='checkbox']
					-webkit-font-smoothing antialiased
					text-rendering optimizeSpeed
					width 15px
					height 15px
					margin 2px
					margin-right 5px
					display block
					float left
					position relative
					cursor pointer
				input[type='checkbox']:after
					content ""
					vertical-align middle
					text-align center
					line-height 16px
					position absolute
					cursor pointer
					height 15px
					width 15px
					left 0px
					top 0px
					font-size 12px
					background $color_white
					box-shadow 0 0 2px $color7
					border-radius 3px
				input[type='checkbox']:checked:after
					background $color_white
					content '\2714'
					color #000

.t_bookmarks .options .settings 
	.settings-btn
		cursor default
		border none
		color $color4


.img-tabs {
	width: 20px;
	height: 20px;
	background: url(../img/tabs.png) no-repeat;
	background-size: contain;
	float: left;
}

.t_tabs 
	.statistic .open-tabs
		min-width 50px
	.options .settings:hover
		.settings-options
			display block
			box-shadow 6px -3px 8px rgba(150, 150, 150, 0.5)
		.settings-btn
			border-top 1px solid $color1
			background $color1
			color $color_white
			border-radius 0 0 5px 5px
			box-shadow 2px 2px 3px rgba(150, 150, 150, 0.5)

#help {
	clear: both;
	padding: 3px 8px 3px 8px;
	display: flex;
	justify-content: flex-start;
	align-content: center;
	align-items: center;
	width: calc(100% - 16px);
	background: $color7;
	border-top: 1px solid $color_white;
}